<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="73dp"
        android:layout_x="505dp"
        android:layout_y="110dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:id="@+id/button2"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:layout_alignTop="@+id/button"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:layout_x="395dp"
        android:layout_y="110dp" />

    <example.com.rcremote.VerticalSeekBar
        android:id="@+id/seekbar"
        android:layout_height="210dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="73dp"
        android:layout_marginStart="73dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="70dp"
        android:layout_y="16dp"
        android:max="180"
        android:progress="90"

        android:rotation="180" />

    <TextView
        android:id="@+id/tv_value"
        android:layout_height="31dp"
        android:layout_width="72dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/seekbar"
        android:layout_toEndOf="@+id/seekbar"
        android:layout_marginLeft="73dp"
        android:layout_marginStart="73dp"
        android:layout_x="118dp"
        android:layout_y="110dp"
        android:text="0" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Stopped"
        android:textOff="Control"
        android:id="@+id/toggleButton"
        android:layout_x="256dp"
        android:layout_y="193dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:text="Center"
        android:id="@+id/button3"
        android:layout_x="452dp"
        android:layout_y="40dp" />

</AbsoluteLayout>